.container2
  form(action="enConstruccion" method='POST')
    input(type='hidden' value= usuario.IdUsuario   name="IdUsuario") 
    h3 Mi Informacion
    .row
      .col-half
        h4 Nombre completo
          .input-group.input-group-icon
            input(type="text", value = usuario.nombreCompleto , placeholder="Nombre completo")
            .input-icon
              i.fa.fa-user
          h4 Nombre de usuario
          .input-group.input-group-icon
            input(type="username",  value = usuario.username , placeholder="Nombre de usuario")
            .input-icon
              i.fa.fa-envelope
      .col-half
        h4 Telefono
        .input-group.input-group-icon
          input(type="text",  value = usuario.telefono,  placeholder="Telefono")
          .input-icon
            i.fa.fa-key
        h4 Email 
        .input-group.input-group-icon
          input(type="email",  value = usuario.mail,  placeholder="Email")
          .input-icon
            i.fa.fa-key   
      h4 Direccion 
      .input-group.input-group-icon
        input(type="text",  value = usuario.direccion,  placeholder="Direccion")
