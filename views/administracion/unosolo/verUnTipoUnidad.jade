          .input-group.input-group-icon
            input(type="text", value = tipoUnidad.nombreTipo , placeholder="Nombre Tipo Unidad")
            .input-icon
              i.fa.fa-user
        
        h4 Status
        .input-group 
          select
            if tipoUnidad.status == true
              option(class="opt" value = empresa.status) Activo
              option(class="opt" value = flase) Inactivo
            else 
              option(class="opt" value = tipoUnidad.status) Inactivo 
              option(class="opt" value = true) Activo

