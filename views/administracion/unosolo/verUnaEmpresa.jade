.container2
  form(action="enConstruccion" method='POST')
    input(type='hidden' value= empresa.idEmpresa   name="IdEmpresa") 
    h3 Informacion de la Empresa
    .row
      .col-half
        h4 Nombre Empresa
          .input-group.input-group-icon
            input(type="text", value = empresa.nombreEmpresa , placeholder="Nombre Empresa")
            .input-icon
              i.fa.fa-user
        h4 Estado
          .input-group.input-group-icon
            input(type="text",  value = empresa.estado , placeholder="Estado")
            .input-icon
              i.fa.fa-envelope
        h4 Colonia
          .input-group.input-group-icon
            input(type="text",  value = empresa.colonia , placeholder="Colonia")
            .input-icon
              i.fa.fa-envelope
        h4 Domicilio
      
      .col-half
        h4 Status
        .input-group 
          select
            if empresa.status == true
              option(class="opt" value = empresa.status) Activo
              option(class="opt" value = flase) Inactivo
            else 
              option(class="opt" value = empresa.status) Inactivo 
              option(class="opt" value = true) Activo
        h4 Ciudad
          .input-group.input-group-icon
            input(type="text",  value = empresa.ciudad , placeholder="Ciudad")
            .input-icon
              i.fa.fa-envelope
      
      .input-group.input-group-icon
        input(type="text",  value = empresa.domicilio,  placeholder="Domicilio")
        .input-icon
          i.fa.fa-key 


      
    .row 
      .col-half 
        h4 Numero Interior
        .input-group.input-group-icon
          input(type="text",  value = empresa.numeroInterior , placeholder="Numero Interior")
          .input-icon
            i.fa.fa-envelope
        
        h4 CP
          .input-group.input-group-icon
            input(type="text",  value = empresa.CP , placeholder="Codigo Postal")
            .input-icon
              i.fa.fa-envelope


      .col-half
        h4 Numero Exterior
          .input-group.input-group-icon
            input(type="text",  value = empresa.numeroExterior , placeholder="Numero Exterior")
            .input-icon
              i.fa.fa-envelope
        h4 Pais
        .input-group.input-group-icon
          input(type="text",  value = empresa.pais , placeholder="Pais")
          .input-icon
            i.fa.fa-envelope
                     
    .row
      
      .input-group
        br
        input(type="submit", value="Guardar" class="brnGuardar")
        for(action="enConstruccion" method='POST')            
          input(type="submit", value="Nuevo" class ="brnNuevo")

